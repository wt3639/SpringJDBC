<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tom.springjdbc.studentMapper">
  <select id="selectStudent" parameterType="long" resultType="com.tom.springjdbc.bean.Student">
    select * from student where id = #{id}
  </select>
  
  <select id="selectAllStudent" resultType="com.tom.springjdbc.bean.Student">
  select *
  from student
</select>
  
  <insert id="insertStudent" parameterType="com.tom.springjdbc.bean.Student">
  insert into student (id,name,qq,type,enterDate,school,stId,link,word,TA,source,update_at,create_at) 
  values(#{id},#{name},#{qq},#{type},#{enterDate},#{school},#{stId},#{link},#{word},#{tA},#{source},#{update_at},#{create_at})
</insert>

<update id="updateStudent" parameterType="com.tom.springjdbc.bean.Student">
  update student set
    name=#{name},
    qq=#{qq},
    type=#{type},
    enterDate=#{enterDate},
    school=#{school},
    stId=#{stId},
    link=#{link},
    word=#{word},
    TA=#{tA},
    source=#{source},
    update_at=#{update_at},
    create_at=#{create_at}
  where id = #{id}
</update>

<delete id="deleteStudent" parameterType="long" >
  delete from student where id = #{id}
</delete>
  
</mapper>